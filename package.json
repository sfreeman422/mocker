{
  "name": "mock",
  "version": "1.0.0",
  "description": "Mock your friends",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:prod": "tsc -p tsconfig.prod.json",
    "format:check": "prettier --check 'src/**/*.ts'",
    "format:fix": "prettier --write 'src/**/*.ts'",
    "lint": "eslint '*/**/*.{js,ts}'",
    "lint:fix": "eslint '*/**/*.{js,ts}' --quiet --fix",
    "start": "npm run start:dev",
    "start:prod": "node dist/index.js",
    "start:dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/index.ts",
    "test": "jest --silent",
    "test:watch": "jest --watch"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@slack/web-api": "^6.8.0",
    "axios": "^0.18.1",
    "body-parser": "^1.20.2",
    "easy-table": "^1.1.1",
    "express": "^4.18.2",
    "ioredis": "^5.0.4",
    "moment": "^2.24.0",
    "mysql": "^2.17.1",
    "openai": "^4.16.1",
    "sentiment": "^5.0.2",
    "typeorm": "^0.3.19",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/easy-table": "0.0.32",
    "@types/express": "^4.17.21",
    "@types/jest": "^24.0.15",
    "@types/jest-when": "^2.7.0",
    "@types/lolex": "^3.1.1",
    "@types/node": "^12.12.56",
    "@types/sentiment": "^5.0.1",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^2.3.0",
    "jest": "^26.4.2",
    "jest-when": "^2.7.0",
    "lint-staged": "^8.1.7",
    "nodemon": "^1.19.0",
    "prettier": "^3.2.2",
    "ts-jest": "^26.3.0",
    "ts-node": "^10.4.0",
    "typescript": "^5.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts, spec.ts, css,json}": [
      "npm run lint",
      "git add"
    ]
  }
}
